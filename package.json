{
    "name": "birthday-bot",
    "version": "1.0.0",
    "author": "Scott Bucher",
    "description": "Celebrate birthdays with automatic birthday roles and announcements! Highly customizable and easy to use!",
    "private": true,
    "engines": {
        "node": ">=15.0.0"
    },
    "main": "dist/start.js",
    "scripts": {
        "lint": "tslint --project .",
        "lint:fix": "tslint --fix --project .",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "build": "tsc --project tsconfig.json",
        "start": "npm run build && node --enable-source-maps dist/start.js",
        "start:dev": "ts-node-dev --watch src/**/*.ts,config/**/*.json,lang/**/*.json src/start.ts",
        "start:shard": "npm run build && node --enable-source-maps dist/app.js",
        "start:pm2": "npm run build && npm run pm2:start",
        "pm2:start": "pm2 start process.json",
        "pm2:stop": "pm2 stop process.json",
        "pm2:delete": "pm2 delete process.json"
    },
    "dependencies": {
        "chrono-node": "2.3.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "color-name-list": "8.25.0",
        "discord.js": "^13.3.0",
        "discord.js-collector-utils": "1.2.3",
        "discord.js-multilingual-utils": "^1.7.2",
        "discord.js-rate-limiter": "^1.2.2",
        "express": "4.17.1",
        "express-promise-router": "^4.1.0",
        "filesize": "8.0.0",
        "moment-timezone": "0.5.33",
        "mysql": "2.18.1",
        "node-fetch": "3.1.1",
        "node-schedule": "2.0.0",
        "pino": "7.0.5",
        "pino-pretty": "7.1.0",
        "pm2": "^5.1.1",
        "reflect-metadata": "^0.1.13",
        "remove-markdown": "0.3.0"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/mysql": "2.15.19",
        "@types/node": "^16.7.13",
        "@types/node-fetch": "3.0.2",
        "@types/node-schedule": "1.3.2",
        "@types/remove-markdown": "^0.3.1",
        "prettier": "^2.3.2",
        "ts-node-dev": "^1.1.8",
        "tslint": "^6.1.3",
        "typescript": "^4.4.2"
    }
}
